        <foreign-key foreignTable="folder" name="fk_folder_moretextarea_folder_id" onDelete="CASCADE" onUpdate="RESTRICT">
            <reference foreign="id" local="folder_id" />
        </foreign-key>
        <behavior name="timestampable" />
